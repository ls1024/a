<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View style="@style/Style.Shadow.Bottom.read" />

    <LinearLayout android:orientation="vertical"
        android:background="#dd111111"
        android:padding="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5.0">
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="10.0">
                <TextView android:textSize="12.0sp"
                    android:textColor="#ffffffff"
                    android:paddingLeft="9.0dip"
                    android:paddingTop="8.0dip"
                    android:paddingBottom="4.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音量" />
                <SeekBar android:id="@+id/tts_volume"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:layout_marginBottom="4.0dip"
                    android:max="15" android:progress="10"
                    android:layout_weight="1.0" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="10.0">
                <TextView android:textSize="12.0sp"
                    android:textColor="#ffffffff"
                    android:paddingLeft="9.0dip"
                    android:paddingTop="8.0dip"
                    android:paddingBottom="4.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音调" />
                <SeekBar android:id="@+id/tts_pitch"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:layout_marginBottom="4.0dip"
                    android:max="20"
                    android:progress="10"
                    android:layout_weight="1.0" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="10.0">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12.0sp"
                        android:textColor="#ffffffff"
                        android:paddingLeft="9.0dip"
                        android:paddingTop="8.0dip"
                        android:paddingBottom="4.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="语速"
                        android:singleLine="true"
                        android:layout_weight="5.0" />

                    <TextView android:textSize="12.0sp"
                        android:textStyle="bold|italic"
                        android:textColor="#ffeeeeee"
                        android:id="@+id/resetTv"
                        android:background="@drawable/tts_selector"
                        android:paddingLeft="8.0dip"
                        android:paddingTop="8.0dip"
                        android:paddingRight="8.0dip"
                        android:paddingBottom="2.0dip"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重置"
                        android:singleLine="true" />

                </LinearLayout>
                <SeekBar
                    android:id="@+id/tts_speed"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:layout_marginBottom="4.0dip"
                    android:max="40"
                    android:progress="10"
                    android:layout_weight="1.0" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="54.0dip"
            android:layout_marginLeft="2.0dip"
            android:layout_marginRight="2.0dip"
            android:layout_marginBottom="4.0dip">
            <ImageView android:id="@+id/tts_stop"
                android:background="@drawable/tts_selector"
                android:padding="11.0dip"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_tts_stop"
                android:tint="#ffffffff"
                android:scaleType="fitCenter"
                android:layout_weight="10.0" />
            <View android:layout_width="4.0dip" android:layout_height="fill_parent" />
            <ImageView android:id="@+id/tts_page_up"
                android:background="@drawable/tts_selector"
                android:padding="10.0dip"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_tts_page_up"
                android:tint="#ffffffff"
                android:scaleType="fitCenter"
                android:layout_weight="10.0" />
            <ImageView android:id="@+id/tts_prior"
                android:background="@drawable/tts_selector"
                android:padding="10.0dip"
                android:clickable="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_tts_prior"
                android:tint="#ffffffff"
                android:scaleType="fitCenter"
                android:layout_weight="10.0" />
            <ImageView android:id="@+id/tts_play"
                android:background="@drawable/tts_selector"
                android:padding="10.0dip"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_tts_pause"
                android:tint="#ffffffff"
                android:scaleType="fitCenter"
                android:layout_weight="10.0" />
            <ImageView android:id="@+id/tts_next"
                android:background="@drawable/tts_selector"
                android:padding="10.0dip"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_tts_next"
                android:tint="#ffffffff"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:layout_weight="10.0" />
            <ImageView android:id="@+id/tts_page_down"
                android:background="@drawable/tts_selector"
                android:padding="10.0dip"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_tts_page_down"
                android:tint="#ffffffff"
                android:scaleType="fitCenter"
                android:layout_weight="10.0" />
            <View android:layout_width="4.0dip" android:layout_height="fill_parent" />
            <TextView
                android:id="@+id/tts_filter"
                android:textSize="12.0sp"
                android:textColor="#ffffffff"
                android:paddingLeft="9.0dip"
                android:paddingTop="8.0dip"
                android:paddingBottom="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="字符过滤"
                android:singleLine="true"
                android:layout_weight="10.0" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>